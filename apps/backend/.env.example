# Backup Configuration
BACKUP_DIR="./backups"
BACKUP_TYPE="full"
BACKUP_COMPRESSION="true"
BACKUP_ENCRYPTION="false"
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# Backup Retention (in days/weeks/months)
BACKUP_RETENTION_DAILY="7"
BACKUP_RETENTION_WEEKLY="4"
BACKUP_RETENTION_MONTHLY="12"

# Backup Schedules (cron format)
BACKUP_SCHEDULE_FULL="0 2 * * *"         # Daily at 2 AM
BACKUP_SCHEDULE_INCREMENTAL="0 * * * *"  # Every hour
BACKUP_SCHEDULE_CLEANUP="0 3 * * 0"      # Sunday at 3 AM
BACKUP_SCHEDULE_HEALTH="0 1 * * *"       # Daily at 1 AM

