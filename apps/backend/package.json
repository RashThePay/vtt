{
  "name": "@high-seas/backend",
  "version": "1.0.0",
  "description": "Backend API server for High Seas VTT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed:partial": "tsx scripts/seed-partial.ts",
    "db:cleanup": "tsx scripts/cleanup.ts",
    "backup:create": "tsx scripts/backup/database-backup.ts create",
    "backup:restore": "tsx scripts/backup/database-backup.ts restore",
    "backup:cleanup": "tsx scripts/backup/database-backup.ts cleanup",
    "backup:schedule": "tsx scripts/backup/backup-scheduler.ts start",
    "backup:full": "tsx scripts/backup/backup-scheduler.ts trigger-full",
    "backup:incremental": "tsx scripts/backup/backup-scheduler.ts trigger-incremental",
    "backup:health": "powershell -File scripts/backup/backup.ps1 -Action health-check",
    "backup:setup-schedule": "powershell -File scripts/backup/backup.ps1 -Action schedule",
    "backup:verify": "tsx scripts/backup/backup-verifier.ts verify",
    "backup:verify-all": "tsx scripts/backup/backup-verifier.ts verify-all",
    "backup:report": "tsx scripts/backup/backup-verifier.ts report"
  },
  "dependencies": {
    "express": "^4.19.2",
    "socket.io": "^4.8.1",
    "prisma": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "winston": "^3.15.0",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0",
    "node-cron": "^3.0.3",
    "date-fns": "^3.6.0",
    "axios": "^1.7.9",
    "nodemailer": "^6.9.17",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.0.0",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1"
  }
}
